@model AZUL.COM.Models.Reservation

@{
    ViewData["Title"] = "AddEmp";
    Layout = "~/Views/Shared/CustomerDash_Layout.cshtml";
    
}

<!DOCTYPE html>



    <h4 style="margin:60px">Reservation</h4>
    <hr />
    <div class="row" style="margin:60px">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoomId" class="control-label"></label>
                    <select asp-for="RoomId" name="roomId" class="form-control" asp-items="ViewBag.RoomId"></select>
                </div>
             

                <div class="form-group">
                    <label asp-for="CheckInDate" class="control-label"></label>
                    <input asp-for="CheckInDate" name="indate" class="form-control" />
                    <span asp-validation-for="CheckInDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CheckOutDate" class="control-label"></label>
                    <input asp-for="CheckOutDate" name="outdate" class="form-control" />
                    <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a asp-controller="Rooms" asp-action="Book"><input type="submit" value="Create" class="btn btn-primary" /></a>
                </div>
            </form>
        </div>
    </div>

    <div style="margin:60px">
        <a asp-controller="Rooms" asp-action="Book">Back to List</a>
    </div>

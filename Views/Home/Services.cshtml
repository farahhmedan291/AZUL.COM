
@{
    ViewData["Title"] = "Services";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var HeaderImage = ViewBag.HeaderImage;
    var DescImage1 = ViewBag.DescImage1;
    var DescImage2 = ViewBag.DescImage2;
    var DescImage3 = ViewBag.DescImage3;
    var DescHeader = ViewBag.DescHeader;
    var DescParagraph = ViewBag.DescParagraph;
    var DescSubHeader1 = ViewBag.DescSubHeader1;
    var DescSubHeader2 = ViewBag.DescSubHeader2;
    var DescSubHeader3 = ViewBag.DescSubHeader3;
    var DescSubParagraph1 = ViewBag.DescSubParagraph1;
    var DescSubParagraph2 = ViewBag.DescSubParagraph2;
    var DescSubParagraph3 = ViewBag.DescSubParagraph3;
    var ServicesHeader1 = ViewBag.ServicesHeader1;
    var ServicesHeader2 = ViewBag.ServicesHeader2;
    var ServicesHeader3 = ViewBag.ServicesHeader3;
    var ServicesHeader4 = ViewBag.ServicesHeader4;
    var ServicesHeader5 = ViewBag.ServicesHeader5;
    var ServicesHeader6 = ViewBag.ServicesHeader6;
    var ServicesParagraph1 = ViewBag.ServicesParagraph1;
    var ServicesParagraph2 = ViewBag.ServicesParagraph2;
    var ServicesParagraph3 = ViewBag.ServicesParagraph3;
    var ServicesParagraph4 = ViewBag.ServicesParagraph4;
    var ServicesParagraph5 = ViewBag.ServicesParagraph5;
    var ServicesParagraph6 = ViewBag.ServicesParagraph6;
}

<!-- ##### Breadcumb Area Start ##### -->
<section class="breadcumb-area bg-img d-flex align-items-center justify-content-center" style="background-image: url(@HeaderImage);">
    <div class="bradcumbContent">
        <h2>Services</h2>
    </div>
</section>
<!-- ##### Breadcumb Area End ##### -->
<!-- ##### Book Now Area Start ##### -->
<div class="book-now-area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <div class="book-now-form" style="margin-left:100px">
                    <form action="#">
                        <!-- Form Group -->
                        <div class="form-group">
                            <label for="select1">Check In</label>
                            <select class="form-control" id="select1">
                                <option>19 June</option>
                                <option>20 June</option>
                                <option>21 June</option>
                                <option>22 June</option>
                                <option>23 June</option>
                                <option>24 June</option>
                                <option>25 June</option>
                            </select>
                        </div>

                        <!-- Form Group -->
                        <div class="form-group">
                            <label for="select2">Check Out</label>
                            <select class="form-control" id="select2">
                                <option>20 June</option>
                                <option>21 June</option>
                                <option>22 June</option>
                                <option>23 June</option>
                                <option>24 June</option>
                                <option>25 June</option>
                                <option>26 June</option>
                                <option>27 June</option>
                            </select>
                        </div>

                        <!-- Form Group -->
                        <div class="form-group">
                            <label for="select3">Person</label>
                            <select class="form-control" id="select3">
                                <option>02</option>
                                <option>03</option>
                                <option>04</option>
                                <option>05</option>
                                <option>06</option>
                            </select>
                        </div>



                        <!-- Button -->
                        <button type="submit" asp-controller="Logins" asp-action="Login">Book Now</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### Book Now Area End ##### -->
<!-- ##### Service Intro Area Start ##### -->
<section class="services-intro">
    <div class="container">
        <div class="row align-items-center">
            <!-- Service Intro Text -->
            <div class="col-12 col-lg-6">
                <div class="service-intro-text mb-100">
                    <div class="section-heading">
                        <div class="line-"></div>
                        <h2>@DescHeader</h2>
                    </div>
                    <p>@DescParagraph</p>
                </div>
            </div>

            <!-- Services Features -->
            <div class="col-12 col-lg-6">
                <div class="row mb-100">

                    <!-- Single Cool Facts -->
                    <div class="col-12 col-sm-4">
                        <div class="single-cool-fact">
                            <div class="scf-text">
                                <i class="icon-cocktail-1"></i>
                                <p>Pool Beachbar</p>
                            </div>
                        </div>
                    </div>

                    <!-- Single Cool Facts -->
                    <div class="col-12 col-sm-4">
                        <div class="single-cool-fact">
                            <div class="scf-text">
                                <i class="icon-swimming-pool"></i>
                                <p>Infinity Pool</p>
                            </div>
                        </div>
                    </div>

                    <!-- Single Cool Facts -->
                    <div class="col-12 col-sm-4">
                        <div class="single-cool-fact">
                            <div class="scf-text">
                                <i class="icon-beach"></i>
                                <p>Sunbeds</p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<!-- ##### Service Intro Area End ##### -->
<!-- ##### Core Features Start ##### -->
<section class="core-features-area">
    <div class="container">
        <div class="row justify-content-center">

            <!-- Single Core Feature Area -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="single-core-feature mb-100">
                    <div class="bg-thumbnail bg-img" style="background-image: url(@DescImage1);"></div>
                    <!-- Content -->
                    <div class="feature-content">
                        <i class="icon-sunset"></i>
                        <h3>@DescSubHeader1</h3>
                        <p>@DescSubParagraph1</p>
                    </div>
                </div>
            </div>

            <!-- Single Core Feature Area -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="single-core-feature mb-100">
                    <div class="bg-thumbnail bg-img" style="background-image: url(@DescImage2);"></div>
                    <!-- Content -->
                    <div class="feature-content">
                        <i class="icon-sunset"></i>
                        <h3>@DescSubHeader2</h3>
                        <p>@DescSubParagraph2</p>
                    </div>
                </div>
            </div>

            <!-- Single Core Feature Area -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="single-core-feature mb-100">
                    <div class="bg-thumbnail bg-img" style="background-image: url(@DescImage3);"></div>
                    <!-- Content -->
                    <div class="feature-content">
                        <i class="icon-island"></i>
                        <h3>@DescSubHeader3</h3>
                        <p>@DescSubParagraph3</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- ##### Core Features End ##### -->
<!-- ##### Services Area Start ##### -->
<section class="services-area">
    <div class="container">
        <div class="row">

            <!-- Single Service Area -->
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="single-service-area mb-100 wow fadeInUp" data-wow-delay="100ms">
                    <i class="icon-trekking"></i>
                    <h4>@ServicesHeader1</h4>
                    <p>@ServicesParagraph1</p>
                </div>
            </div>

            <!-- Single Service Area -->
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="single-service-area mb-100 wow fadeInUp" data-wow-delay="200ms">
                    <i class="icon-boat"></i>
                    <h4>@ServicesHeader2</h4>
                    <p>@ServicesParagraph2</p>
                </div>
            </div>

            <!-- Single Service Area -->
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="single-service-area mb-100 wow fadeInUp" data-wow-delay="300ms">
                    <i class="icon-restaurant"></i>
                    <h4>@ServicesHeader3</h4>
                    <p>@ServicesParagraph3</p>
                </div>
            </div>

            <!-- Single Service Area -->
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="single-service-area mb-100 wow fadeInUp" data-wow-delay="400ms">
                    <i class="icon-beach"></i>
                    <h4>@ServicesHeader4</h4>
                    <p>@ServicesParagraph4</p>
                </div>
            </div>

            <!-- Single Service Area -->
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="single-service-area mb-100 wow fadeInUp" data-wow-delay="500ms">
                    <i class="icon-boarding-pass"></i>
                    <h4>@ServicesHeader5</h4>
                    <p>@ServicesParagraph5</p>
                </div>
            </div>

            <!-- Single Service Area -->
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="single-service-area mb-100 wow fadeInUp" data-wow-delay="600ms">
                    <i class="icon-sign"></i>
                    <h4>@ServicesHeader6</h4>
                    <p>@ServicesParagraph6</p>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- ##### Services Area End ##### -->

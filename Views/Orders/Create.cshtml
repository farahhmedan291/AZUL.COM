@model AZUL.COM.Models.Orders

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/CustomerDash_Layout.cshtml";
}



<h4 style="margin:60px;">Order</h4>
<hr />

<div class="row" style="margin:60px;">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MealId" class="control-label"></label>
                <select asp-for="MealId" class="form-control" asp-items="ViewBag.MealId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Order Now" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>




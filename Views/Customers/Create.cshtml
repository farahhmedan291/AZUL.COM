@model AZUL.COM.Models.Customer

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>AZUL . COM - Register</title>
    <link rel="icon" href="~/img/core-img/logo1.png">
    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary" style="margin-top: 100px;">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            <form asp-action="Create" class="user" enctype="multipart/form-data">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input asp-for="FName" class="form-control form-control-user" placeholder="First Name" />
                                        <span asp-validation-for="FName" class="text-danger" required></span>
                                    </div>
                                    <div class="col-sm-6">
                                        <input asp-for="LName" type="text" name="lName" class="form-control form-control-user" id="exampleLastName"
                                               placeholder="Last Name" required>
                                        <span asp-validation-for="LName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Email" type="email" name="email" class="form-control form-control-user" id="exampleInputEmail"
                                           placeholder="Email Address" required>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input id="username" type="text" name="username" class="form-control form-control-user" id="exampleInputUsername"
                                           placeholder="Username" required>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="password" name="password" class="form-control form-control-user"
                                               id="exampleInputPassword" placeholder="Password" required>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="password" class="form-control form-control-user"
                                               id="exampleRepeatPassword" placeholder="Repeat Password" required>
                                    </div>
                                   
                                </div>
                                <input type="submit" value="Register Account" class="btn btn-primary btn-user btn-block"  onclick="Validate()"/>

                               
                            </form>
                            <hr>
                           
                            <div class="text-center">
                                <a class="small" asp-controller="Logins" asp-action="Login">Already have an account? Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <a asp-controller="Home" asp-action="Index" class="float">
        <i class="fa fa-home my-float"></i>
    </a>
    <script type="text/javascript">
        function Validate() {
            var password = document.getElementById("exampleInputPassword").value;
            var confirmPassword = document.getElementById("exampleRepeatPassword").value;
            if (password != confirmPassword) {
                alert("Passwords do not match.");
                return false;
            }
            return true;
        }
    </script>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>

</body>

</html>

